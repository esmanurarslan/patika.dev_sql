--Sütunların her birine göre diğer sütunları güncelleyecek 5 adet UPDATE işlemi yapalım
UPDATE employee
SET birthday='1111-11-11'
WHERE name LIKE 'B%'
RETURNING *;

UPDATE employee
SET name='DATA'
WHERE birthday='1111-11-11'
RETURNING *;

UPDATE employee
SET email='j@ade.com'
WHERE name='Jade Swyer'
RETURNING *;

UPDATE employee
SET name='Last Employee'
WHERE id>49
RETURNING *;

UPDATE employee
SET birthday='2000-01-01'
WHERE id=50
RETURNING *;

--Sütunların her birine göre ilgili satırı silecek 5 adet DELETE işlemi yapalım.
DELETE FROM employee
WHERE name LIKE 'A%'
RETURNING *;

DELETE FROM employee
WHERE email LIKE 'e%'
RETURNING *;

DELETE FROM employee
WHERE id>45
RETURNING *;


DELETE FROM employee
WHERE birthday='2015-10-26'
RETURNING *;


DELETE FROM employee
WHERE id=23
RETURNING *;

